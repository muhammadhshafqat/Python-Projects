class BookItem:
    def __init__(self, title, author, price, quantity_in_stock):
        self.title = title
        self.author = author
        self.price = price
        self.quantity_in_stock = quantity_in_stock

    def display_info(self):
        print(f"Title: {self.title}")
        print(f"Author: {self.author}")
        print(f"Price: ${self.price:.2f}")
        print(f"Quantity in Stock: {self.quantity_in_stock}")
        print()

class BookInventory:
    def __init__(self):
        self.book_items = []

    def add_book_item(self, book_item):
        self.book_items.append(book_item)
        print("Book item added to the inventory.")

    def display_inventory(self):
        if not self.book_items:
            print("Inventory is empty.")
        else:
            print("Book Inventory:")
            for book_item in self.book_items:
                book_item.display_info()

    def find_book_item(self, title):
        for book_item in self.book_items:
            if book_item.title.lower() == title.lower():
                return book_item
        return None

    def sell_book(self, title, quantity):
        book_item = self.find_book_item(title)
        if book_item and book_item.quantity_in_stock >= quantity:
            book_item.quantity_in_stock -= quantity
            print(f"Book '{title}' sold successfully.")
        else:
            print(f"Book '{title}' not found or insufficient stock.")

class BookShop:
    def __init__(self):
        self.inventory = BookInventory()

    def add_new_book(self, title, author, price, quantity_in_stock):
        new_book_item = BookItem(title, author, price, quantity_in_stock)
        self.inventory.add_book_item(new_book_item)

if __name__ == "__main__":
    book_shop = BookShop()

    while True:
        print("\nOptions:")
        print("1. Add New Book to Inventory")
        print("2. Display Book Inventory")
        print("3. Sell Book")
        print("4. Exit")

        choice = input("Enter your choice (1-4): ")

        if choice == '1':
            title = input("Enter book title: ")
            author = input("Enter author name: ")
            price = float(input("Enter book price: "))
            quantity = int(input("Enter quantity in stock: "))
            
            book_shop.add_new_book(title, author, price, quantity)

        elif choice == '2':
            book_shop.inventory.display_inventory()

        elif choice == '3':
            title = input("Enter book title to sell: ")
            quantity = int(input("Enter quantity to sell: "))
            book_shop.inventory.sell_book(title, quantity)

        elif choice == '4':
            print("Exiting the Book Shop Management System. Goodbye!")
            break

        else:
            print("Invalid choice. Please enter a number between 1 and 4.")
