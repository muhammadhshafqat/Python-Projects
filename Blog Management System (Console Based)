import datetime

class BlogPost:
    def __init__(self, title, content, author):
        self.title = title
        self.content = content
        self.author = author
        self.timestamp = datetime.datetime.now()

    def display_post(self):
        print(f"Title: {self.title}")
        print(f"Content: {self.content}")
        print(f"Author: {self.author}")
        print(f"Timestamp: {self.timestamp}")
        print()

class BlogManager:
    def __init__(self):
        self.posts = []

    def create_post(self, title, content, author):
        new_post = BlogPost(title, content, author)
        self.posts.append(new_post)
        print("Blog post created successfully.")

    def display_posts(self):
        if not self.posts:
            print("No blog posts available.")
        else:
            print("Blog Posts:")
            for post in self.posts:
                post.display_post()

if __name__ == "__main__":
    blog_manager = BlogManager()

    while True:
        print("\nOptions:")
        print("1. Create Blog Post")
        print("2. Display Blog Posts")
        print("3. Exit")

        choice = input("Enter your choice (1-3): ")

        if choice == '1':
            title = input("Enter post title: ")
            content = input("Enter post content: ")
            author = input("Enter post author: ")

            blog_manager.create_post(title, content, author)

        elif choice == '2':
            blog_manager.display_posts()

        elif choice == '3':
            print("Exiting the blog management system. Goodbye!")
            break

        else:
            print("Invalid choice. Please enter a number between 1 and 3.")
